@model IEnumerable<HoopStats.Models.GameStats>

@{
    ViewData["Title"] = "Basketball Stats";
}

<div class="container mt-4">
    <h2>Recent NBA Game Statistics</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-action="Import" class="btn btn-primary">Import New Data</a>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Player</th>
                    <th>Team</th>
                    <th>Opp</th>
                    <th>MIN</th>
                    <th>PTS</th>
                    <th>REB</th>
                    <th>AST</th>
                    <th>STL</th>
                    <th>BLK</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stat in Model)
                {
                    <tr>
                        <td>@stat.GameDate.ToShortDateString()</td>
                        <td><a asp-action="PlayerStats" asp-route-playerName="@stat.Player">@stat.Player</a></td>
                        <td><a asp-action="TeamStats" asp-route-teamName="@stat.Team">@stat.Team</a></td>
                        <td>@stat.Opponent</td>
                        <td>@stat.MinutesPlayed.ToString("F1")</td>
                        <td>@stat.Points</td>
                        <td>@stat.TotalRebounds</td>
                        <td>@stat.Assists</td>
                        <td>@stat.Steals</td>
                        <td>@stat.Blocks</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#statsModal-@stat.Id">
                                View
                            </button>
                        </td>
                    </tr>

                    <!-- Modal for detailed stats -->
                    <div class="modal fade" id="statsModal-@stat.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@stat.Player - Detailed Stats</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Date:</strong> @stat.GameDate.ToShortDateString()</p>
                                            <p><strong>Team:</strong> @stat.Team</p>
                                            <p><strong>Opponent:</strong> @stat.Opponent</p>
                                            <p><strong>Result:</strong> @stat.Result</p>
                                            <p><strong>Minutes:</strong> @stat.MinutesPlayed</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>FG:</strong> @stat.FieldGoalsMade/@stat.FieldGoalsAttempted (@stat.FieldGoalPercentage.ToString("P1"))</p>
                                            <p><strong>3P:</strong> @stat.ThreePointersMade/@stat.ThreePointersAttempted (@stat.ThreePointPercentage.ToString("P1"))</p>
                                            <p><strong>FT:</strong> @stat.FreeThrowsMade/@stat.FreeThrowsAttempted (@stat.FreeThrowPercentage.ToString("P1"))</p>
                                            <p><strong>REB:</strong> @stat.TotalRebounds (O: @stat.OffensiveRebounds, D: @stat.DefensiveRebounds)</p>
                                            <p><strong>Game Score:</strong> @stat.GameScore.ToString("F1")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}
