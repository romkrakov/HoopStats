@model HoopStats.Models.User

@{
    ViewData["Title"] = "עריכת משתמש";
}

<div class="container mt-4" dir="rtl">
    <h2>@ViewData["Title"]</h2>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }
    
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IsAdmin" />
        <input type="hidden" asp-for="PasswordHash" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">שם פרטי</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">שם משפחה</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">שם משתמש</label>
                    <input asp-for="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">אימייל</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label">מין</label>
                    <select asp-for="Gender" class="form-select" required>
                        <option value="">בחר מין</option>
                        <option value="male">זכר</option>
                        <option value="female">נקבה</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="Password" class="form-label">סיסמה חדשה (השאר ריק אם אין צורך בשינוי)</label>
                    <input name="Password" type="password" class="form-control" />
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">שמור שינויים</button>
            <a href="@Url.Action("ManageUsers")" class="btn btn-secondary">ביטול</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}